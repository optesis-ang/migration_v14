<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.optimo</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Optimo" string="Optimo" data-key="optimo">
                        <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label"> Activation Optimo Account Asset</span>
                                        <div class="content-group">
                                            <div class="row mt16">
                                                <label for="group_account_asset" string="Activer" class="col-lg-3 o_light_label"/>
                                                <field name="group_account_asset"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_optimo_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'optimo'}</field>
        </record>

        <menuitem id="menu_optimo_config" name="Configuration" parent="asset_menu_0"  sequence="10" action="action_optimo_config" groups="base.group_system"/>
    </data>
</odoo>